{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "node -r dotenv/config ./node_modules/.bin/ts-node-dev --respawn --transpileOnly server.ts",
    "env-dev": "env-cmd npm run dev",
    "prod": "node -r dotenv/config ./build/server.js",
    "build": "tsc",
    "test": "echo \"Error: no test specified\"",
    "lint": "eslint . --ext .ts,.json --max-warnings 0",
    "lint-and-fix": "eslint . --ext .ts,.json --fix",
    "prettier-format": "prettier --config .prettierrc '**/*.{json,ts}' --write",
    "db:generate-migration": "sequelize-ts create --models-path=./src/infrastructure/persistence/sequelize.ts --name",
    "db:migrate": "env-cmd ts-node ./migrations/scripts/migrate.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npx tsc"
    }
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "morgan": "^1.9.1",
    "multer": "^1.4.2",
    "mysql2": "^2.1.0",
    "sequelize": "5.21.3",
    "sequelize-typescript": "^1.1.0",
    "sequelize-typescript-auto-migrations": "git+https://github.com/Peersyst/sequelize-typescript-auto-migrations.git#peersyst",
    "typescript": "^4.6.4",
    "umzug": "^2.3.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/morgan": "^1.9.1",
    "@types/multer": "^1.4.5",
    "@types/node": "^13.1.7",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "prettier": "^2.2.0",
    "ts-node": "~10.7.0",
    "ts-node-dev": "1.0.0-pre.44"
  },
  "resolutions": {
    "@types/express-serve-static-core": "4.17.20",
    "@types/express": "4.17.2"
  }
}
